---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Astro.">
  <div id="page-container" class="min-h-screen p-12 gap-12">
    <header class="[grid-area:header] bg-yellow-500">Header</header>
    <main class="[grid-area:main] bg-green-500">Main</main>
    <aside class="[grid-area:aside] bg-purple-500">Aside</aside>
    <footer class="[grid-area:footer] bg-orange-500">Footer</footer>
  </div>
</Layout>

<style>
  #page-container {
    display: grid;
    grid-template-areas:
      "header header header"
      "main main aside"
      "main main aside"
      "footer footer footer";
    grid-template-columns: repeat(3 1fr);
    grid-template-rows: 1fr 2fr 1fr 2fr;
  }
</style>
